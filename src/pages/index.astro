---
import Layout from '../layouts/Layout.astro';
import Leaflet from '../components/Leaflet.jsx';
import TripCard from '../components/TripCard.astro'

import { getCollection } from 'astro:content';
const recentTrips = (await getCollection('trips')).sort(
    (a, b) => b.data.postdate.valueOf() - a.data.postdate.valueOf()
  );
const locations = await getCollection('locations');

---

<Layout title="Home">
<h1>Avgeek Portal</h1>
<h2>Recent Trips</h2>
<div class="trips-listing">
  {recentTrips.slice(0, 5).map(trip => (
		<TripCard
        trip_id={trip.id},
        title={trip.data.name},
        youtube_id={trip.data.source_id},
        date={trip.data.postdate}
      />
  ))}
</div>
<h2>Locations Visited</h2>
<div>
  <Leaflet client:only="react" locations={locations}/>
</div>

</Layout>

<style is:global>
  .map-container {
    height: 450px;
    width: 100%;
    border-radius: 16px;
  }
  .leaflet-popup-content-wrapper {
    font-family: 'Overpass', sans-serif;
    font-weight: 500;
    text-align: center;
  }
</style>
